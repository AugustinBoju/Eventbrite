<html>
  <head>
    <title>Eventbrite</title>
  </head>

  <body>
   <div class="jumbotron">
    <h1 class="display-4">Profil</h1>
   </div>
   <div class='container'>
      <div class="card text-center bg-info text-white">
        <div class="card-body">
            First_name: <h5 class='card-title'><%=@user.first_name%></h5>
            Last_name: <h5 class='card-text'><%=@user.last_name%></h5>
            description: <h5 class='card-text'><%=@user.description%></h5>
            event number: <h5 class='card-footer'><%=@user.events.count%></h5>
            <div class='btn'><%=link_to 'edit', users_edit_path(current_user.id), class:'btn btn-secondary'%></div>
            <div class='btn'><%=link_to 'edit email', edit_user_registration_path(current_user.id), class:'btn btn-secondary'%></div>
            <div class='btn'><%=link_to 'edit password', edit_user_password_path(current_user.id), class:'btn btn-secondary'%></div>
        </div>
    </div>
    <br/><br/><br/>

    <div class="container">
        <%@events.all.each do |event|%>
        <div class="card text-center bg-secondary text-white">
            event title: <h5 class='card-title'><%=event.title%></h5>
            <div class='btn'><%= link_to "Details", event_path(event.id), :class=>'btn btn-info'%></div>
        </div><br/>
        <%end%>
    </div>
  </body>
</html>
